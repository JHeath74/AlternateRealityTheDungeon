package AlternateRealityTheDungeon;

import java.util.concurrent.TimeUnit;

import javax.swing.JFrame;
import javax.swing.JTextArea;

public class ARDTMessages {
	
	
	public void WelcomeMessage() throws InterruptedException {
		
		JFrame f= new JFrame();  
        JTextArea area=new JTextArea("Your Adventure");
        area.setText("On your way home from your last adventure you are setup up on my an unknown group of people");
        TimeUnit.SECONDS.sleep(2);
        area.append("You feel yourself being carried for a while and then dropped on something hard.");
        TimeUnit.SECONDS.sleep(2);
        area.append("You hear a sound like a door shutting then you start to move.  Slowly at first,  then very quickly.  Then you quickly passout");
        TimeUnit.SECONDS.sleep(2);
        area.append("You wake up an unknown time later, and see someone standind there.  They look at you for a moment than ask you if you are ok.");
        TimeUnit.SECONDS.sleep(2);
        area.append("And they want to know about you.");
        area.setBounds(10,30, 200,200);  
        f.add(area);  
        f.setSize(300,300);  
        f.setLayout(null);  
        f.setVisible(true);  
		
	}

}
